root = true

[*]
end_of_line = lf
charset = utf-8

[*.lua]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true